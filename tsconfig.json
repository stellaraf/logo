{
  "compilerOptions": {
    "lib": ["es6", "dom", "es2016", "es2017"],
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "types": ["node", "react"],
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "declaration": true,
    "module": "esnext",
    "outDir": "./dist",
    "sourceMap": true,
    "rootDir": "src",
    "allowJs": false,
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "esm", "src/**/*.test.ts"]
}
